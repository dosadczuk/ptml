{
  "name": "dosadczuk/ptml",
  "description": "Build HTML elements with attributes easily",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Damian Osadczuk",
      "homepage": "https://github.com/dosadczuk"
    }
  ],
  "scripts": {
    "test": "pest",
    "generate:attributes": "php  cli/generate_attributes.php",
    "generate:elements": "php  cli/generate_elements.php"
  },
  "require": {
    "php": "~8.1"
  },
  "autoload": {
    "psr-4": {
      "PTML\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PTML\\Test\\": "tests/"
    }
  },
  "require-dev": {
    "pestphp/pest": "^1.21"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
