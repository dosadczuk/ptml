{
    "name": "dosadczuk/ptml",
    "description": "Build HTML elements with attributes easily",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Damian Osadczuk",
            "homepage": "https://github.com/dosadczuk"
        }
    ],
    "scripts": {
        "test": "pest",
        "analyse": "phpstan analyse"
    },
    "require": {
        "php": "~8.1"
    },
    "require-dev": {
        "pestphp/pest": "^2.9",
        "phpstan/phpstan": "^1.10",
        "haydenpierce/class-finder": "^0.4.3"
    },
    "autoload": {
        "psr-4": {
            "PTML\\": "src/"
        },
        "files": [
            "src/Element/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PTML\\Test\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
